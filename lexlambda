server {
  listen  80; 
  server_name www.lexlambda.com lexlambda.com;
  return 301 https://lexlambda.com$request_uri;
}

server {
  listen 443 ssl;
  server_name  lexlambda.com;
  access_log  /var/log/nginx/lexlambda.access.log;
  error_log  /var/log/nginx/lexlambda.error.log;
  ssl_certificate /etc/letsencrypt/live/christopherpatrouch.com/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/christopherpatrouch.com/privkey.pem;

location  / {
    root  /var/www/lexlambda;
    index  index.html index.htm;
  }

location ~ /.well-known {
                allow all;
        }
}
