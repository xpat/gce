server {
  listen  80;
  server_name  www.pinchepoutine.mx pinchepoutine.mx;
  return 301 https://pinchepoutine.mx$request_uri;
}

server {
  listen 443 ssl;
  server_name pinchepoutine.mx;
  access_log  /var/log/nginx/pinchepoutinemx.access.log;
  error_log  /var/log/nginx/pinchepoutinemx.error.log;
  ssl_certificate /etc/letsencrypt/live/christopherpatrouch.com/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/christopherpatrouch.com/privkey.pem;

  location  / {
    root  /var/www/pinchepoutinemx;
    index  index.html index.htm;
  }

location ~ /.well-known {
		allow all;
	}
}
