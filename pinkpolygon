server {
  listen  80;
  server_name  www.pinkpolygon.com pinkpolygon.com;
  return 301 https://pinkpolygon.com$request_uri;
}

server {
  listen 443 ssl;
  server_name pinkpolygon.com;
  access_log  /var/log/nginx/pinkpolygon.access.log;
  error_log  /var/log/nginx/pinkpolygon.error.log;
  ssl_certificate /etc/letsencrypt/live/christopherpatrouch.com/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/christopherpatrouch.com/privkey.pem;

  location  / {
    root  /var/www/pinkpolygon;
    index  index.html index.htm;
  }

location ~ /.well-known {
		allow all;
	}
}
