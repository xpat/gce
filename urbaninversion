server {
  listen  80;
  server_name  www.urbaninversion.com urbaninversion.com;
  return 301 https://urbaninversion.com$request_uri;
}

server {
  listen 443 ssl;
  server_name urbaninversion.com;
  access_log  /var/log/nginx/urbaninversion.access.log;
  error_log  /var/log/nginx/urbaninversion.error.log;
  ssl_certificate /etc/letsencrypt/live/christopherpatrouch.com/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/christopherpatrouch.com/privkey.pem;

  location  / {
    root  /var/www/urbaninversion;
    index  index.html index.htm;
  }

location ~ /.well-known {
		allow all;
	}
}
