server {
  listen  80;
  server_name  patraldo.com www.patraldo.com;
  return 301 https://patraldo.com$request_uri;
}

server {
  listen 443 ssl;
  server_name patraldo.com;
  access_log  /var/log/nginx/patraldo.access.log;
  error_log  /var/log/nginx/patraldo.error.log;
  ssl_certificate /etc/letsencrypt/live/christopherpatrouch.com/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/christopherpatrouch.com/privkey.pem;

location  / {
    root  /var/www/patraldo;
    index  index.html index.htm;
  }
location ~ /.well-known {
		allow all;
	}
}
