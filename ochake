server {
  listen  80;
  server_name www.ochake.com ochake.com;
  return 301 https://ochake.com$request_uri;
}
  
server {
  listen 443 ssl;
  server_name  ochake.com;
  access_log  /var/log/nginx/ochake.access.log;
  error_log  /var/log/nginx/ochake.error.log;
  ssl_certificate /etc/letsencrypt/live/christopherpatrouch.com/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/christopherpatrouch.com/privkey.pem;

location  / {
    root  /var/www/ochake;
    index  index.html index.htm;
  }

location ~ /.well-known {
                allow all;
        }
}
